<div class="life-arena-cell @IsAliveCssClass" @onclick="() => OnClick.InvokeAsync()"></div>

@code
{
    private string IsAliveCssClass => IsAlive ? "life-arena-cell-alive" : "life-arena-cell-dead";
    
    [Parameter]
    public bool IsAlive { get; set; }
    
    [Parameter]
    public EventCallback OnClick { get; set; }
}
